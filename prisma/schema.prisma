generator client {
  provider = "prisma-client-js"
  output   = "./node_modules/@prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Content {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  cover_image String?
  image_url   String?
  video_url   String?
  extra_links Json?
  tags        Json?
  downloads   Int       @default(0)
  category    String?
  created_at  DateTime  @default(now())
  slug        String?   @unique
  type        String    @default("blog")
  likes       Int       @default(0)
  comments    Comment[]
}

model Comment {
  id          Int      @id @default(autoincrement())
  content     String
  author      String?
  created_at  DateTime @default(now())
  contentId   Int
  deleteToken String
  contentRef  Content  @relation(fields: [contentId], references: [id])
}
